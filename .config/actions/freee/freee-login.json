{
  "id": "freee-login",
  "name": "freee会計ログイン",
  "service": "freee",
  "category": "auth",
  "description": "freee会計にメールアドレスとパスワードでログインします",
  "parameters": [
    {
      "name": "email",
      "type": "string",
      "required": true,
      "description": "freeeアカウントのメールアドレス",
      "validation": {
        "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$"
      }
    },
    {
      "name": "password",
      "type": "string",
      "required": true,
      "description": "freeeアカウントのパスワード"
    }
  ],
  "steps": [
    {
      "order": 1,
      "type": "navigate",
      "value": "https://accounts.secure.freee.co.jp/login",
      "description": "freeeログインページに遷移",
      "expected": "ログインフォームが表示される",
      "timeout": 30000
    },
    {
      "order": 2,
      "type": "waitForSelector",
      "selector": "input[name='loginId'], input[id='loginIdField']",
      "description": "ログインID入力フィールドを待機",
      "timeout": 10000
    },
    {
      "order": 3,
      "type": "fill",
      "selector": "input[name='loginId'], input[id='loginIdField']",
      "value": "{{email}}",
      "description": "ログインID（メールアドレス）を入力",
      "expected": "ログインIDが入力される"
    },
    {
      "order": 4,
      "type": "fill",
      "selector": "input[name='password'], input[id='passwordField']",
      "value": "{{password}}",
      "description": "パスワードを入力",
      "expected": "パスワードが入力される"
    },
    {
      "order": 5,
      "type": "click",
      "selector": "button[type='submit'], input[type='submit']",
      "description": "ログインボタンをクリック",
      "expected": "ログイン処理が実行される"
    },
    {
      "order": 6,
      "type": "waitForNavigation",
      "description": "ログイン後のページ遷移を待機",
      "timeout": 30000
    },
    {
      "order": 7,
      "type": "wait",
      "value": 2000,
      "description": "ページの完全な読み込みを待機",
      "optional": true
    }
  ],
  "validation": [
    {
      "type": "url",
      "condition": "contains",
      "expected": "secure.freee.co.jp",
      "timeout": 5000,
      "errorMessage": "freeeのドメインに遷移していません"
    }
  ],
  "metadata": {
    "createdAt": "2026-02-09T00:00:00.000Z",
    "updatedAt": "2026-02-09T00:00:00.000Z",
    "usageCount": 0,
    "successCount": 0,
    "failureCount": 0,
    "successRate": 0,
    "averageDuration": 0,
    "tags": ["freee", "login", "auth", "accounting"],
    "version": "1.0.0"
  }
}
